# Performance Test Environment Configuration

# Application Environment
NODE_ENV=performance

# Database Configuration (Performance Test DB)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=pdcp_perf_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=performance-test-jwt-secret
JWT_EXPIRES_IN=1h

# Blockchain Configuration (Test Network)
BLOCKCHAIN_NETWORK=test
HYPERLEDGER_FABRIC_ENDPOINT=http://localhost:7051
POLYGON_EDGE_ENDPOINT=http://localhost:8545

# External Services (Mock endpoints for performance testing)
GOOGLE_MAPS_API_KEY=performance-test-google-maps-key
FIREBASE_PROJECT_ID=pdcp-performance-test
FIREBASE_PRIVATE_KEY=performance-test-firebase-key
FIREBASE_CLIENT_EMAIL=performance-test@pdcp-perf.iam.gserviceaccount.com

# Logging (Minimal for performance)
LOG_LEVEL=warn

# Rate Limiting (Higher limits for performance testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10000

# WebSocket Configuration
WS_PORT=3001
WS_MAX_CONNECTIONS=1000

# Performance Test Specific
PERF_TEST_VEHICLE_COUNT=1000
PERF_TEST_PARCEL_COUNT=5000
PERF_TEST_CONCURRENT_USERS=100
PERF_TEST_DURATION_MS=60000

# Database Connection Pool (Optimized for performance testing)
DB_CONNECTION_POOL_MIN=10
DB_CONNECTION_POOL_MAX=50
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# Cache Configuration (Optimized for performance)
CACHE_TTL=300
CACHE_MAX_ITEMS=10000

# Service Ports (Performance Test)
AUTH_SERVICE_PORT=3010
DECISION_ENGINE_PORT=3011
VEHICLE_TRACKING_PORT=3012
PARCEL_MANAGEMENT_PORT=3013
CUSTODY_SERVICE_PORT=3014
ANALYTICS_SERVICE_PORT=3015
AUDIT_SERVICE_PORT=3016
API_GATEWAY_PORT=3000